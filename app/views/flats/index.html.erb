<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand"><h1>Rails Simple AirBnB</h1></a>
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="Search a flat.." aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    <%= link_to 'Create new flats', new_flat_path, class: "btn btn-outline-primary my-2 my-sm-0" %>
  </form>
</nav>

<div class="card-container">
      <% @flats.each do |flat| %>
        <div class="card-trip">
          <img src="https://source.unsplash.com/1600x900/?flat,house&rand=<%= rand( 9999) %>" />
          <div class="card-trip-infos">
            <div>
              <%= link_to flat_path(flat) do %>
                  <h2><%= flat.name %></h2>
                  <p><%= flat.description %></p>
                <% end %>
            </div>
            <p class="card-trip-pricing">$<%= flat.price_per_night %></p>
            <p class="card-trip-pricing">Guest: <%= flat.number_of_guests %></p>
          </div>
        </div>
      <% end %>
</div>

