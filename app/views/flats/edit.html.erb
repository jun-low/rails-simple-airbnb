<h1>Edit <%= @flat.name %></h1>

<div class="container">
<%= simple_form_for @flat do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.submit "Edit the flat", class: "btn btn-primary" %>
  <%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-danger' %>
<% end %>
</div>
